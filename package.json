{
  "name": "nextjs-graphql",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "git config --local core.hooksPath .githooks",
    "dev": "run-p \"dev:*\"",
    "dev:next": "next dev",
    "dev:css": "tailwindcss -w -i src/styles/app.css -o generated/tailwindcss/app.css",
    "dev:urql": "graphql-codegen --config urql-codegen.ts --watch",
    "build": "pnpm prisma:generate && pnpm build:nexus-typegen && pnpm urql:codegen && pnpm build:css && pnpm build:next",
    "build:nexus-typegen": "ts-node --transpile-only nexus/schema",
    "build:next": "next build",
    "build:css": "tailwindcss -m -i src/styles/app.css -o generated/tailwindcss/app.css",
    "start": "next start",
    "generate": "pnpm prisma:generate && pnpm build:nexus-typegen && pnpm urql:codegen && pnpm build:css",
    "typecheck": "tsc --noEmit",
    "lint": "rome check src",
    "format": "rome format src --write",
    "prisma": "dotenv -e .env.development -- prisma generate && prisma format",
    "prisma:pull": "dotenv -e .env.development -- cp ./prisma/schema.prisma.tmpl ./prisma/schema.prisma && prisma db pull && ts-node convert-prisma-notation.ts",
    "prisma:generate": "dotenv -e .env.development -- prisma generate",
    "prisma:format": "dotenv -e .env.development -- prisma format",
    "prisma:studio": "dotenv -e .env.development -- prisma studio",
    "migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy --preview-feature",
    "urql:codegen": "graphql-codegen --config urql-codegen.ts"
  },
  "dependencies": {
    "@apollo/server": "4.3.2",
    "@as-integrations/next": "1.2.0",
    "@next/font": "13.1.6",
    "@prisma/client": "4.9.0",
    "graphql": "16.6.0",
    "next": "13.1.6",
    "prisma": "4.9.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "3.0.0",
    "@graphql-codegen/typescript": "3.0.0",
    "@graphql-codegen/typescript-operations": "3.0.0",
    "@graphql-codegen/typescript-urql": "3.7.3",
    "@types/lodash": "4.14.191",
    "@types/node": "18.11.19",
    "@types/pluralize": "0.0.29",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "dotenv-cli": "7.0.0",
    "graphql-scalars": "1.20.1",
    "graphql-tag": "2.12.6",
    "lint-staged": "13.1.0",
    "lodash": "4.17.21",
    "micro": "10.0.1",
    "nexus": "1.3.0",
    "nexus-prisma": "1.0.4",
    "npm-run-all": "4.1.5",
    "pluralize": "8.0.0",
    "rome": "11.0.0",
    "tailwindcss": "3.2.4",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "urql": "3.0.3"
  }
}
